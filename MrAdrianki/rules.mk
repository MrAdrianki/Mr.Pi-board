BOOTMAGIC_ENABLE = yes      # Enable Bootmagic Lite
BOOTLOADER = rp2040			# Bootloader selection
LTO_ENABLE = yes			# Disables Action Functions, and Action Macros, both of which are deprecated. Longer final step in compilation

OLED_ENABLE = yes			# Enable oled screen
OLED_DRIVER = ssd1306		# Oled screen driver

AUDIO_ENABLE = yes			# Enable audio output
AUDIO_DRIVER = pwm_hardware	# Defines the audio driver to use